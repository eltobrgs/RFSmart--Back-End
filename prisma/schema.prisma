generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  email     String       @unique
  name      String?
  password  String
  products  Product[]    @relation("User  Products")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  category    String
  description String
  userId      String   @map("user_id") @db.ObjectId
  user        User     @relation("User  Products", fields: [userId], references: [id])
  pdfUrl      String?  // Novo campo para armazenar a URL do PDF
  videoUrl    String?  // Novo campo para armazenar a URL do v√≠deo
}
